<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.example.sasalog.orderstore.OrderEditorActivity">

    <EditText
        android:layout_width="match_parent"
        android:layout_height="150dp"
        android:id="@+id/txt_edit_order" />
    <Button
        android:layout_width="match_parent"
        android:layout_height="70dp"
        android:layout_below="@id/txt_edit_order"
        android:id="@+id/btn_add_order"
        android:text="@string/add_order"
        android:onClick="addOrder"/>
    <Button
        android:layout_width="match_parent"
        android:layout_height="70dp"
        android:layout_below="@id/btn_add_order"
        android:onClick="orderUpdate"
        android:text="@string/update_order"
        android:layout_marginTop="10sp"
        android:id="@+id/btn_update_order"/>

</RelativeLayout>
